{
  "name": "cuda-toolkit",
  "version": "0.2.3",
  "description": "GitHub Action to install the NVIDIA CUDA Toolkit",
  "main": "lib/main.js",
  "scripts": {
    "build": "tsc",
    "format": "prettier --write **/*.ts jest.config.js",
    "format-check": "prettier --check **/*.ts jest.config.js",
    "lint": "eslint src/**/*.ts __tests__/**/*.ts",
    "package": "ncc build --source-map --license licenses.txt",
    "test": "jest",
    "all": "npm run build && npm run format && npm run lint && npm run package && npm test"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jimver/cuda-toolkit.git"
  },
  "keywords": [],
  "author": "Jim Verheijde",
  "bugs": {
    "url": "https://github.com/Jimver/cuda-toolkit/issues"
  },
  "homepage": "https://github.com/Jimver/cuda-toolkit#readme",
  "volta": {
    "node": "12.21.0"
  },
  "license": "MIT",
  "dependencies": {
    "@actions/artifact": "^0.5.0",
    "@actions/core": "^1.2.6",
    "@actions/exec": "^1.0.4",
    "@actions/glob": "^0.1.1",
    "@actions/tool-cache": "^1.6.1",
    "@types/semver": "^7.3.4",
    "semver": "^7.3.4"
  },
  "devDependencies": {
    "@types/jest": "^26.0.20",
    "@types/node": "^14.14.33",
    "@typescript-eslint/parser": "^4.17.0",
    "@vercel/ncc": "^0.25.1",
    "eslint": "^7.21.0",
    "eslint-plugin-github": "^4.1.2",
    "eslint-plugin-jest": "^24.2.1",
    "jest": "^26.6.3",
    "jest-circus": "^26.6.3",
    "js-yaml": "^3.14.1",
    "prettier": "2.2.1",
    "ts-jest": "^26.5.3",
    "typescript": "^4.2.3"
  }
}
